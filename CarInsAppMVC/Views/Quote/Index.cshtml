
@{
    ViewBag.Title = "Quote";
}
    <h3>@ViewBag.Message</h3>
    <div class="row no-gutters m-3">
        <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
            <div class="card-body">
                @using (Html.BeginForm("GetQuote", "Quote", FormMethod.Post))
                {
                <div class="row no-gutters">
                    <div class="form-group col-md-6">
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                    </div>
                    <div class="form-group col-md-6">
                        <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                    </div>
                    <div class="form-group col-md-7">
                        <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                    </div>
                    <div class="form-group col-md-5">
                        <input name="DateOfBirth" type="text" class="form-control" placeholder="Year of Birth" />
                    </div>
                    <div class="form-group col-md-4">
                        <input name="CarYear" type="text" class="form-control" placeholder="Car Year" />
                    </div>
                    <div class="form-group col-md-4">
                        <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                    </div>
                    <div class="form-group col-md-4">
                        <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                    </div>
                    <div class="form-group col-md-3">
                        <form>
                            <select id="InsType" name="InsType">
                                <option value="null">Select..</option>
                                <option value="full">Full Coverage</option>
                                <option value="liability">Liability Coverage</option>
                            </select>
                        </form>
                    </div>
                    <div class="form-group col-md-6">
                        <input name="PresentDUI" type="text" class="form-control" placeholder="true or false: DUI history?" />
                        @*<form>
                            <select id="PresentDUI" name="PresentDUI">
                                <option value="null">Select..</option>
                                <option value="false">No DUI history</option>
                                <option value="true">DUI history present</option>
                            </select>
                        </form>*@
                    </div>
                    <div class="form-group col-md-6">
                        <input name="NumberSpeedingTickets" type="text" class="form-control" placeholder="Speeding Tickets (number only)" />
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Submit</button>
                </div>
                }
            </div>
        </div>
    </div>

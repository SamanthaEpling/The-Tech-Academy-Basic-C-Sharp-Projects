@model IEnumerable<EplingPets.Models.Species>

@{
    ViewBag.Title = "Index";
}

<h2>Species</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Species Name
        </th>
        <th>
           Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SpeciesName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpeciesDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SpeciesId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SpeciesId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SpeciesId })
        </td>
    </tr>
}

</table>
